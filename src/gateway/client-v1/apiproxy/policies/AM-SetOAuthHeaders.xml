<AssignMessage name="AM-SetOAuthHeaders">
    <AssignTo createNew="false" type="response"/>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <Set>
        <Headers>
          <Header name="Authorization">Basic {encodeBase64(basicAuth)}</Header>
        </Headers>
    </Set>
</AssignMessage>