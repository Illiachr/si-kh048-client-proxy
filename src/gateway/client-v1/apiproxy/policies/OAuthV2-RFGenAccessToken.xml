<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OAuthV2 enabled="true" continueOnError="false" async="false" name="OAuthV2-RFGenAccessToken">
    <Operation>GenerateAccessToken</Operation>
    <!-- 1 hour -->
    <ExpiresIn>3600000</ExpiresIn>
    <!-- 8 hours -->
    <RefreshTokenExpiresIn>28800000</RefreshTokenExpiresIn>
    <SupportedGrantTypes>
        <GrantType>password</GrantType>
    </SupportedGrantTypes>
    <GrantType>response.header.grant_type</GrantType>
    <UserName>userGrant.login</UserName>
    <PassWord>userGrant.pwd</PassWord>
    <GenerateResponse/>
</OAuthV2>

