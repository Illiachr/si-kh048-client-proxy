<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
  <Description/>
  <FaultRules>
    <FaultRule name="JSONThreat">
      <Condition>jsonattack.JTP-Protect.failed == true</Condition>
      <Step>
        <Condition>fault.name Matches "ExecutionFailed"</Condition>
        <Name>AM-400JSONThreat</Name>
      </Step>
    </FaultRule>
    <FaultRule name="FailedToResolveAPIKey">
        <Step>
          <Name>RF-401APIKey</Name>
          <Condition>(fault.name Matches "FailedToResolveAPIKey") or  (fault.name Matches "InvalidApiKey") or  (fault.name Matches "InvalidApiKeyForGivenResource")</Condition>
        </Step>
    </FaultRule>
  </FaultRules>
  <DefaultFaultRule>
      <AlwaysEnforce>true</AlwaysEnforce>
  </DefaultFaultRule>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>SA-SpikeArrest</Name>
      </Step>
      <Step>
        <Name>VAK-VerifyKey</Name>
        <Condition>request.verb != "OPTIONS"</Condition>
      </Step>
      <Step>
        <Name>Q-EnforceQuota</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response>
      <Step>
        <Condition>request.header.Origin != null</Condition>
        <Name>AM-SetCORSHeaders</Name>
      </Step>
    </Response>
  </PostFlow>
  <Flows>
    <Flow name="OptionsPreFlight">
      <Request/>
      <Response>
          <Step>
              <Name>AM-SetCORSHeaders</Name>
          </Step>
      </Response>
      <Condition>request.verb == "OPTIONS" AND request.header.origin != null AND request.header.Access-Control-Request-Method != null</Condition> 
    </Flow>
    <Flow name="generateAccessToken">
      <Description>Generate Access Token</Description>
      <Request>
        <Step>
          <Name>JTP-Protect</Name>
        </Step>
        <Step>
          <Name>EV-ExtractUserGrant</Name>
        </Step>
        <Step>
          <Name>OAuthV2-GenAccessToken</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-TokenResponse</Name>
          <Condition>oauthV2.failed = false</Condition>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/accesstoken" or proxy.pathsuffix MatchesPath "/accesstoken/") and (request.verb = "POST")</Condition>
    </Flow>
    <Flow name="refreshAccessToken">
      <Description>Refresh Access Token</Description>
      <Request>
        <Step>
          <Name>OAuthV2-RefreshAccessToken</Name>
        </Step>
      </Request>
      <Response>
        <Step>
          <Name>AM-TokenResponse</Name>
          <Condition>oauthV2.failed = false</Condition>
        </Step>
      </Response>
      <Condition>(proxy.pathsuffix MatchesPath "/refresh" or proxy.pathsuffix MatchesPath "/refresh/") and (request.verb = "GET")</Condition>
    </Flow>
    <Flow name="404NotFound">
      <Description>404NotFound</Description>
      <Request>
        <Step>
          <Name>RF-404NotFound</Name>
        </Step>
      </Request>
      <Response/>
    </Flow>
  </Flows>
  <HTTPProxyConnection>
    <BasePath>/replaced_by_config_json</BasePath>
    <Properties/>
    <VirtualHost>secure</VirtualHost>
  </HTTPProxyConnection>
  <RouteRule name="noroute"/>
</ProxyEndpoint>